<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= userFollowers.firstname %> <%= userFollowers.lastname %></title>
    <%- include("../partials/meta") %>
  </head>
  <body>
    <div class="row">
      <!--       NavBar -->
      <div class="col-2"><%- include("../partials/navbar") %></div>
      <!--       Body -->
      <div class="col-10 col-md-6">
        <div class="d-flex align-items-start flex-column mt-4">
          <h5 class="mb-0">
            <%= userFollowers.firstname %> <%= userFollowers.lastname %>
          </h5>
          <small>@<%= userFollowers.username %></small>
        </div>
        <div class="mt-3 d-flex justify-content-around">
          <div>
            <a class="fs-5 text-black fw-semibold">Followers</a>
          </div>
          <div>
            <a
              href="following"
              class="fs-5 text-black fw-semibold text-decoration-none"
              >Following</a
            >
          </div>
        </div>
        <div class="mt-3 d-flex flex-column gap-2">
          <% for (const user of users) { %>
          <!-- comment -->
          <%- include("../partials/smallUser", { user }) %>
          <!-- comment -->
          <%}%>
        </div>
      </div>
      <!--       More info -->
      <div class="col-4 d-none d-lg-block col-lg-4">
        <%- include("../partials/moreinfo") %>
      </div>
    </div>
  </body>
</html>
