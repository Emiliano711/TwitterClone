<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
  </head>
  <body>
    <div class="row">
      <!--     NavBar -->
      <div class="col-2"><%- include("../partials/navbar") %></div>
      <!-- Home Page -->
      <div class="col-10 col-md-6">
        <h5 class="my-4">Home</h5>
        <form action="/home" method="post">
          <div class="d-flex">
            <div class="me-3">
              <img
                src="<%=user.image%>"
                style="width: 4rem; height: 4rem"
                class="figure-img img-fluid rounded-pill align-self-center"
                alt="image"
              />
            </div>
            <div class="w-100">
              <textarea
                class="form-control"
                placeholder="Leave a comment here"
                name="newTweet"
                id="newTweet"
                style="height: 100px"
              ></textarea>
            </div>
          </div>
          <div class="d-flex justify-content-end mt-2">
            <button
              class="btn text-light"
              type="submit"
              style="background-color: #1d9bf0"
            >
              Tweet
            </button>
          </div>
        </form>

        <% for (const tweet of allTweets) { %>
        <!--           comment -->
        <%- include("../partials/tweet", { tweet }) %>
        <!--           comment -->
        <%}%>
      </div>
      <!-- MoreInfo -->
      <div class="col-4 d-none d-lg-block col-lg-4">
        <%- include("../partials/moreinfo") %>
      </div>
    </div>
  </body>
</html>
