<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
  </head>
  <body>
    <div class="row">
      <div class="col-2"><%- include("../partials/navbar") %></div>
      <div class="col-md-6">
        <h1 class="my-4">PÃ¡gina de inicio</h1>

        <% for (const tweet of tweets) { %>
        <div class="d-flex w-100 align-items-center">
          <div class="d-flex align-items-center gap-3 w-100">
            <!--     Imagen Usuario -->

            <div>
              <img
                src="<%= tweet.userId.image %>"
                style="width: 2.5rem"
                class="figure-img img-fluid rounded-pill align-self-center"
                alt="image"
              />
            </div>
            <!-- Nombre y Apellido del Usuario -->
            <div class="d-flex flex-column">
              <h6 class="mb-0 p-0">
                <%=tweet.userId.firstname %> <%=tweet.userId.lastname %>
              </h6>
              <p class="p-0 m-0" style="font-size: 0.8rem; color: #969696">
                <%=tweet.userId.username %>
              </p>
              <!-- Contenido del usuario -->
              <div class="d-flex">
                <p><%=tweet.text %></p>
              </div>
            </div>
          </div>
        </div>
        <%}%>
      </div>
      <div class="col-md-4"><%- include("../partials/moreinfo") %></div>
    </div>
  </body>
</html>
