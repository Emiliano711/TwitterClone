<div class="d-flex w-100 align-items-center">
  <!--     Info Usuario -->
  <div class="d-flex align-items-center gap-3 w-100">
    <!--     Imagen Usuario -->
    <a href="/usuarios/<%= user.username %>">
      <img
        src="<%= user.image %>"
        style="width: 2.5rem"
        class="figure-img img-fluid rounded-pill align-self-center"
        alt="image"
      />
    </a>
    <!--     Desc. Usuario -->
    <div>
      <a
        class="text-decoration-none text-black"
        href="/usuarios/<%= user.username %>"
      >
        <h6 class="mb-0 p-0"><%= user.firstname %> <%= user.lasttname %></h6>
      </a>
      <p class="p-0 m-0" style="font-size: 0.8rem; color: #969696">
        @<%= user.username %>
      </p>
    </div>
  </div>
  <!--     Boton Follow -->
  <div class="justify-content-end">
    <button
      type="button"
      class="btn rounded-pill"
      style="background-color: #1d9bf0; color: white"
    >
      Follow
    </button>
  </div>
</div>
